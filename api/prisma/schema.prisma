generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

model Board {
  id         Int      @id @default(autoincrement())
  tasks      Task[]
  created_at DateTime
  name       String
}

model Task {
  id          Int        @id @default(autoincrement())
  board       Board      @relation(fields: [board_id], references: [id])
  board_id    Int
  status      TaskStatus @default(PENDING)
  order       Int
  name        String
  description String
}
